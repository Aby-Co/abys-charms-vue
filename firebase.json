{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "site": "test-aby-charms",
    "public": "dist",
    "region": "asia-south1",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/order-create",
        "function": "orderCreate"
      },
      {
        "source": "!/api/**",
        "destination": "/index.html"
      },
      {
        "source": "/about/**",
        "destination": "/index.html"
      }
    ]
  },
  "extensions": {},
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
